{
  "manifest_version": 3,
  "name": "New Tab Homie",
  "version": "0.5.0",
  "description": "New Tab Homie - a custom new tab dashboard showing location, weather, and quotes.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "offscreen", "geolocation"],
  "host_permissions": [
    "*://nominatim.openstreetmap.org/*",
    "*://api.quotable.io/*",
    "*://api.open-meteo.com/*"
  ]
}
