{
  "manifest_version": 3,
  "name": "New Tab Homie",
  "version": "0.6.0",
  "description": "New Tab Homie - Your Minimalist Personal Dashboard (Alpha)",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "geolocation"],
  "host_permissions": [
    "*://nominatim.openstreetmap.org/*",
    "*://api.quotable.io/*",
    "*://api.open-meteo.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "font-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline';"
  }
}
